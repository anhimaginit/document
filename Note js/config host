 2/Installing Apache
 
 sudo apt-get install apache2
 
 a/Optimizing Apache for a Linode 1GB
 sudo cp /etc/apache2/apache2.conf /etc/apache2/apache2.backup.conf
 sudo nano /etc/apache2/apache2.conf
 
 add it end of file
 ---
	 KeepAlive Off

	...
	<IfModule mpm_prefork_module>
	StartServers 2
	MinSpareServers 6
	MaxSpareServers 12
	MaxClients 80
	MaxRequestsPerChild 3000
	</IfModule>
-----

sudo a2dissite *default
cd /var/www
sudo mkdir vienetllc.com
 
 
 

sudo mkdir -p vienetllc.com/public_html
sudo mkdir -p vienetllc.com/log
sudo mkdir -p vienetllc.com/backups


sudo nano /etc/apache2/sites-available/vienetllc.com.conf





# domain: vienetllc.com
# public: /var/www/vienetllc.com.conf/public_html/

<VirtualHost *:80>
  # Admin email, Server Name (domain name), and any aliases
  ServerAdmin webmaster@vienetllc.com
  ServerName  www.vienetllc.com
  ServerAlias vienetllc.com

  # Index file and Document Root (where the public files are located)
  DirectoryIndex index.html index.php
  DocumentRoot /var/www/vienetllc.com/public_html
  # Log file locations
  LogLevel warn
  ErrorLog  /var/www/vienetllc.com/log/error.log
  CustomLog /var/www/vienetllc.com/log/access.log combined
</VirtualHost>


sudo a2ensite vienetllc.com.conf


sudo service mysql restart

ServerName localhost

sudo service apache2 restart
if wrong -> do (sudo nano /etc/apache2/apache2.conf   add  "ServerName localhost")




